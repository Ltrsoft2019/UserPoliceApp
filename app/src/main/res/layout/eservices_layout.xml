        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/character_certificate"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="50dp"
                    android:text="Character certification"
                    android:textColor="#66000000"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tenant_verf"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="50dp"
                    android:text="Tenant
verification"
                    android:gravity="center"
                    android:textColor="#66000000"
                    android:textStyle="bold"/>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/weapon_veri"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:text="Weapon
Verification
Licence"
                    android:textColor="#66000000"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/clearance_cert"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="50dp"
                    android:text="Certification of Clearance"
                    android:textColor="#66000000"
                    android:textStyle="bold"/>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/domestic_help"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="50dp"
                    android:text="Domestic
Help"
                    android:textColor="#66000000"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/emp_veri"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="50dp"
                    android:text="Employee
Verification"
                    android:textColor="#66000000"
                    android:textStyle="bold"/>


            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/passport_veri"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="50dp"
                    android:text="Passport
Verificaton"
                    android:textColor="#66000000"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/noc_veri"
                android:layout_width="190dp"
                android:layout_height="90dp"
                android:background="@drawable/card_background"
                android:elevation="1dp"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="50dp"
                    android:text="NOC for
Petrol Pump"
                    android:textColor="#66000000"
                    android:textStyle="bold"/>


            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/license_amp_sound"
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_background"
            android:elevation="1dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:text="License for Amplifier Sound System"
                android:textColor="#66000000"
                android:textStyle="bold" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Permissions"
            android:textColor="#B3000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="100dp">
                    <LinearLayout
                        android:id="@+id/rally_permisssion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rally"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="100dp">
                    <LinearLayout
                        android:id="@+id/permisssion_festival"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Festivals"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>

</ScrollView>