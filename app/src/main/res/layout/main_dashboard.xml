<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:background="@drawable/card_background"
            android:elevation="1dp"
            android:layout_margin="8dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Total Registrated complaint"
                android:textColor="#66000000"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/complaint"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/total_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_background"
            android:elevation="1dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Total Solved complaint"
                android:textColor="#66000000"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/problem_solving" />

            <TextView
                android:id="@+id/solved_complant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="15"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_background"
            android:elevation="1dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Total Complaint converted to FIR"
                android:textColor="#66000000"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/warrant" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="5"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="190dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_background"
            android:elevation="1dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Total Ongoing Investigation"
                android:textColor="#66000000"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/private_investigator" />

            <TextView
                android:id="@+id/ongoint_invst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:text="6"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="395dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Complaint Analysis"
            android:textColor="#B3000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/br1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responce Time"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="#66000000"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/br2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="90dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Clearance Time"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="#66000000"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/response_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Days"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:id="@+id/clearance_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 Days"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="280dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:text="E-services"
            android:textColor="#B3000000"
            android:textSize="15dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:background="#000000"
                android:backgroundTint="#ECE9E9"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Total Applied"
                    android:textColor="#66000000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/applied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginLeft="15dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:background="#000000"
                android:backgroundTint="#ECE9E9"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Total Granted"
                    android:textColor="#66000000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/granted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginLeft="15dp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="90dp"
            android:layout_marginTop="230dp">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="#000000"
                android:backgroundTint="#ECE9E9"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Total Rejected"
                    android:textColor="#66000000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/rejected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginLeft="15dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="#000000"
                android:backgroundTint="#ECE9E9"
                app:cardCornerRadius="6dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Total Pending"
                    android:textColor="#66000000"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginLeft="15dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>